{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-empty": [2, "never"],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "wip",
        "feat",
        "merge",
        "fix",
        "test",
        "refactor",
        "build",
        "docs",
        "perf",
        "style",
        "ci",
        "chore",
        "workflow",
        "revert",
        "types",
        "release"
      ]
    ]
  }
}
